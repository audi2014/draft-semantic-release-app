{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": false,
  "rangeStrategy": "pin",
  "constraints": {
    "node": "22"
  },
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "baseBranchPatterns": ["master", "beta"],
  "packageRules": [
    {
      "description": "Beta branch: immediate PRs for beta tags",
      "matchBaseBranches": ["beta"],
      "matchPackageNames": ["@audi2014/npmjs-test"],
      "followTag": "beta",
      "prCreation": "immediate",
      "schedule": ["at any time"],
      "recreateWhen": "always"
    },
    {
      "description": "Master branch: always use latest master, pinned version, automerge",
      "matchBaseBranches": ["master"],

      "recreateWhen": "always",
      "automerge": true,
      "platformAutomerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "ignoreTests": true,
      "matchPackageNames": ["@audi2014/npmjs-test"],
      "schedule": ["at any time"],
      "minimumReleaseAge": "0 seconds",
      "prCreation": "immediate"
    }
  ]
}
